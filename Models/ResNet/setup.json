{
    "model": {
        "architecture": "ResNet50",
        "pretrained": true,
        "num_classes": 1000
    },
    "training": {
        "batch_size": 32,
        "num_epochs": 50,
        "learning_rate": 0.001,
        "lr_scheduler": {
            "step_size": 10,
            "gamma": 0.1
        },
        "optimizer": {
            "type": "Adam",
            "weight_decay": 0.0001
        },
        "loss_function": "CrossEntropyLoss"
    },
    "data": {
        "train_data_dir": "./data/train",
        "val_data_dir": "./data/val",
        "test_data_dir": "./data/test",
        "input_size": 224,
        "augmentation": {
            "horizontal_flip": true,
            "rotation_range": 10,
            "zoom_range": 0.2,
            "brightness_adjust": [0.8, 1.2]
        },
        "normalization": {
            "mean": [0.485, 0.456, 0.406],
            "std": [0.229, 0.224, 0.225]
        }
    },
    "logging": {
        "log_dir": "./logs",
        "save_model_dir": "./models",
        "save_frequency": 5,
        "verbose": true
    },
    "evaluation": {
        "metrics": ["accuracy", "precision", "recall", "f1_score"],
        "confusion_matrix": true
    },
    "hardware": {
        "device": "cuda",
        "num_workers": 4
    },
    "seed": 42
}
